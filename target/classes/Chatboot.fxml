<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.affariyetii.ChatbotController">
    <TextArea fx:id="chatArea" editable="false" prefHeight="200" prefWidth="300" />
    <TextField fx:id="userInput"  promptText="Type your message here..." />
    <Button onAction="#sendMessage" text="Send" />
</VBox>
