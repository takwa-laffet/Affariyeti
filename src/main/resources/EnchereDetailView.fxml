    <center>
        <VBox alignment="CENTER">
            <ImageView fx:id="auctionImageView" fitHeight="200.0" fitWidth="200.0" />
            <Label fx:id="nameLabel" text="Name" />
            <Label fx:id="Datedebut" text="Date debut" />
            <Label fx:id="Datefin" text="Date fin" />
            <Label fx:id="priceLabel" text="Price" />

            <Button onAction="#participateAction" text="Participer" />
         <Button mnemonicParsing="false" onAction="#deleteAction" text="delete" />
    
        </VBox>
    </center>
</BorderPane>
