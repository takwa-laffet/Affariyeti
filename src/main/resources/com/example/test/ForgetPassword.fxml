<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.test.gui.ForgetPassword">
    <children>
        <BorderPane prefHeight="400.0" prefWidth="600.0">
            <left>
                <AnchorPane prefHeight="407.0" prefWidth="228.0" style="-fx-background-color: #8C9EE0;" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fx:id="imageView" fitHeight="201.0" fitWidth="201.0" layoutX="14.0" layoutY="28.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/logo.png" />
                     </image></ImageView>
               </children>
                </AnchorPane>
            </left>
            <center>
                <AnchorPane prefHeight="400.0" prefWidth="373.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label alignment="CENTER" layoutX="69.0" layoutY="25.0" prefHeight="17.0" prefWidth="209.0" text="Secure Reset" textFill="WHITE">
                            <font>
                                <Font name="Verdana Bold" size="24.0" />
                            </font>
                            <effect>
                                <DropShadow />
                            </effect>
                        </Label>
                        <Label layoutX="69.0" layoutY="121.0" text="Email">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="codeLabel" layoutX="71.0" layoutY="183.0" text="code" visible="false">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="emailTextfield" layoutX="138.0" layoutY="118.0" promptText="Email" />
                        <Button fx:id="loginButton" layoutX="14.0" layoutY="348.0" mnemonicParsing="false" onAction="#getVerificationCode" prefHeight="25.0" prefWidth="114.0" text="Send" />
                        <Label fx:id="invalidText" alignment="CENTER" layoutX="76.0" layoutY="318.0" prefHeight="30.0" prefWidth="242.0" textFill="RED" />
                        <TextField fx:id="codeField" layoutX="138.0" layoutY="180.0" promptText="Code" visible="false" />
                        <Button fx:id="verifierButton" layoutX="147.0" layoutY="348.0" mnemonicParsing="false" onAction="#changePassword" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #4EFF43;" text="Verifier" visible="false" />
                        <Button fx:id="changeButton" layoutX="263.0" layoutY="348.0" mnemonicParsing="false" onAction="#updatePassword" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #4EFF43;" text="Change" visible="false" />
                        <Label fx:id="passwordL" layoutX="65.0" layoutY="240.0" text="Password" visible="false">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="confirmL" layoutX="65.0" layoutY="281.0" prefHeight="20.0" prefWidth="60.0" text="Confirm" visible="false">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <PasswordField fx:id="password" layoutX="138.0" layoutY="238.0" promptText="password" visible="false" />
                        <PasswordField fx:id="confirmpassword" layoutX="138.0" layoutY="279.0" promptText="Confirm" visible="false" />
                  <Button layoutX="253.0" layoutY="348.0" mnemonicParsing="false" onAction="#BackToLogin" text="Back" />

                    </children>
                </AnchorPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
